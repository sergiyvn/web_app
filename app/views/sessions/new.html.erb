<% provide(:title, "Sign in") %>
<h1>Увiйти</h1>

<%= form_for(:session, url: sessions_path) do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label "Пароль" %>
    <%= f.password_field :password %>

    <%= f.submit "Увiйти", class: "btn btn-large btn-primary" %>
<% end %>

<p>New user? <%= link_to "Зареєструватись!", signup_path %></p>
